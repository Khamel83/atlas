
# Atlas Environment Configuration Template
# Copy this file to .env and customize for your deployment

# =============================================================================
# CORE CONFIGURATION
# =============================================================================

# Atlas server configuration
ATLAS_HOST=0.0.0.0
ATLAS_PORT=5000
ATLAS_DEBUG=false

# Data directories
ATLAS_DATA_DIR=/home/atlas/app/data
ATLAS_CONFIG_PATH=/home/atlas/app/config/config.json
ATLAS_LOG_LEVEL=INFO
DATA_DIRECTORY=output

# =============================================================================
# API INTEGRATIONS
# =============================================================================

# OpenRouter API for enhanced content recovery
OPENROUTER_API_KEY=sk-or-v1-your-api-key-here
OPENROUTER_MODEL=anthropic/claude-3-haiku

# Skyvern integration for AI-powered content extraction
SKYVERN_ENABLED=false
SKYVERN_API_URL=https://api.openrouter.ai/api/v1

# Firecrawl API for web scraping
FIRECRAWL_API_KEY=fc-your-api-key-here
FIRECRAWL_ENABLED=false

# =============================================================================
# AUTHENTICATION & PAYWALL BYPASS
# =============================================================================

# NYTimes authentication
NYTIMES_EMAIL=your-email@example.com
NYTIMES_PASSWORD=your-password

# Wall Street Journal authentication  
WSJ_EMAIL=your-email@example.com
WSJ_PASSWORD=your-password

# Medium authentication
MEDIUM_EMAIL=your-email@example.com
MEDIUM_PASSWORD=your-password

# =============================================================================
# LEGACY CONFIGURATION (maintained for compatibility)
# =============================================================================

# Transcription services
TRANSCRIBE_ENABLED=false

# Instapaper API credentials (optional)
INSTAPAPER_API_KEY=
INSTAPAPER_API_SECRET=
INSTAPAPER_USERNAME=
INSTAPAPER_PASSWORD=
INSTAPAPER_CONSUMER_KEY=
INSTAPAPER_CONSUMER_SECRET=

# =============================================================================
# RATE LIMITING & PERFORMANCE
# =============================================================================

# Request rate limiting (requests per minute)
RATE_LIMIT_REQUESTS=60
RATE_LIMIT_WINDOW=60

# Connection timeouts (seconds)
REQUEST_TIMEOUT=30
CONNECTION_TIMEOUT=10

# Retry configuration
MAX_RETRIES=3
RETRY_DELAY=5
EXPONENTIAL_BACKOFF=true

# =============================================================================
# BACKGROUND SERVICE CONFIGURATION
# =============================================================================

# Processing intervals (minutes)
ARTICLE_PROCESS_INTERVAL=30
PODCAST_PROCESS_INTERVAL=240
YOUTUBE_PROCESS_INTERVAL=30
INSTAPAPER_PROCESS_INTERVAL=30
COMPREHENSIVE_PROCESS_INTERVAL=120
RETRY_PROCESS_INTERVAL=480
SKYVERN_PROCESS_INTERVAL=360

# Service limits
MAX_CONCURRENT_PROCESSES=3
PROCESS_TIMEOUT=1800
WATCHDOG_INTERVAL=900

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# SQLite database path
DATABASE_PATH=/home/atlas/app/data/atlas.db
DATABASE_BACKUP_ENABLED=true
DATABASE_BACKUP_INTERVAL=86400

# =============================================================================
# EXPORT CONFIGURATION
# =============================================================================

# Export formats
EXPORT_ENABLED=true
EXPORT_DIR=/home/atlas/app/exports
DAILY_EXPORT_ENABLED=true
EXPORT_FORMATS=obsidian,markdown,json

# =============================================================================
# MONITORING & LOGGING
# =============================================================================

# Prometheus metrics
METRICS_ENABLED=false
METRICS_PORT=9090
METRICS_PATH=/metrics

# Log configuration
LOG_DIR=/home/atlas/app/logs
LOG_ROTATION=true
LOG_MAX_SIZE=100MB
LOG_BACKUP_COUNT=5

# Health check configuration
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_INTERVAL=30

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================

# CORS settings
CORS_ENABLED=true
CORS_ORIGINS=*
CORS_METHODS=GET,POST,PUT,DELETE
CORS_HEADERS=Content-Type,Authorization

# API security
API_KEY_REQUIRED=false
API_KEY=your-secure-api-key-here

# Session security
SESSION_SECRET=your-session-secret-here
SESSION_TIMEOUT=3600

# =============================================================================
# CONTENT PROCESSING CONFIGURATION
# =============================================================================

# Content filters
MIN_CONTENT_LENGTH=100
MAX_CONTENT_LENGTH=1000000
CONTENT_LANGUAGE=en

# Processing options
ENABLE_DEDUPLICATION=true
ENABLE_CONTENT_EXTRACTION=true
ENABLE_METADATA_EXTRACTION=true
ENABLE_SEARCH_INDEXING=true

# Archive strategies priority order
ARCHIVE_STRATEGIES=direct,paywall_auth,enhanced_wayback,12ft,archive_today,googlebot,playwright,standard_wayback

# =============================================================================
# PODCAST CONFIGURATION
# =============================================================================

# Podcast processing
PODCAST_ENABLED=true
PODCAST_RSS_TIMEOUT=30
PODCAST_TRANSCRIPT_TIMEOUT=60
PODCAST_MAX_EPISODES_PER_FEED=50

# =============================================================================
# CAPTURE API CONFIGURATION (Apple Device Integration)
# =============================================================================

# Capture queue settings
CAPTURE_QUEUE_ENABLED=true
CAPTURE_PROCESS_INTERVAL=5
CAPTURE_MAX_QUEUE_SIZE=1000
CAPTURE_RETENTION_DAYS=30

# Content type limits
MAX_TEXT_LENGTH=50000
MAX_URL_LENGTH=2000
MAX_VOICE_DURATION=300

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================

# Development mode (only for development environment)
FLASK_ENV=production
FLASK_DEBUG=false
RELOAD_ON_CHANGE=false

# Testing configuration
TESTING=false
TEST_DATABASE_PATH=/tmp/atlas_test.db

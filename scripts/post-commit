#!/bin/bash

BRANCH=$(git rev-parse --abbrev-ref HEAD)
echo "ğŸ”„ Pushing latest commit to origin/$BRANCH..."
git push origin "$BRANCH"

echo "ğŸ” Verifying commit on GitHub..."
COMMIT=$(git rev-parse HEAD)
REMOTE=$(git ls-remote origin | grep "$COMMIT")

if [ -n "$REMOTE" ]; then
  echo "âœ… Verified: commit $COMMIT is live on GitHub"
else
  echo "âŒ ERROR: commit not visible on GitHub"
  exit 1
fi

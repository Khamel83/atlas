<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <key>Label</key>
    <string>com.atlas.smb-mount</string>

    <key>ProgramArguments</key>
    <array>
        <string>/bin/bash</string>
        <string>/Users/macmini/scripts/mount_atlas_whisper.sh</string>
    </array>

    <!-- Run at login -->
    <key>RunAtLoad</key>
    <true/>

    <!-- Also run every 5 minutes to recover from network blips -->
    <key>StartInterval</key>
    <integer>300</integer>

    <!-- Keep it alive -->
    <key>KeepAlive</key>
    <false/>

    <key>StandardOutPath</key>
    <string>/Users/macmini/logs/smb-mount.log</string>
    <key>StandardErrorPath</key>
    <string>/Users/macmini/logs/smb-mount.log</string>
</dict>
</plist>

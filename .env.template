# Atlas Environment Configuration
# Copy this file to .env and add your actual API keys
# IMPORTANT: Never commit the actual .env file to version control

# GitHub Configuration for RelayQ
GITHUB_TOKEN=your_github_personal_access_token_here

# Atlas Configuration
ATLAS_DB_PATH=/path/to/atlas/podcast_processing.db
ATLAS_PROJECT_DIR=/path/to/atlas

# RelayQ Configuration
RELAYQ_REPO=Khamel83/relayq
RELAYQ_WORKFLOW=atlas_podcast_processing.yml

# Processing Configuration
ATLAS_BATCH_SIZE=50
ATLAS_RETRY_ATTEMPTS=3
ATLAS_AUTO_SCHEDULE=true

# Search API Keys - DO NOT SHARE
TAVILY_API_KEY=your_tavily_api_key_here
TAVILY_API_KEY_BACKUP=your_tavily_backup_api_key_here
PERPLEXITY_API_KEY=your_perplexity_api_key_here

# Video/Content APIs
YOUTUBE_API_KEY=your_youtube_api_key_here
FIRECRAWL_API_KEY=your_firecrawl_api_key_here
CONTEXT7_API_KEY=your_context7_api_key_here

# Paywall Authentication
NYTIMES_USERNAME=your_nytimes_username
NYTIMES_PASSWORD=your_nytimes_password
WSJ_USERNAME=your_wsj_username
WSJ_PASSWORD=your_wsj_password

# Gmail Configuration for Newsletter Processing
GMAIL_EMAIL_ADDRESS=your-gmail@gmail.com
GMAIL_APP_PASSWORD=your-gmail-app-password
GMAIL_LABELS=Atlas,newsletter

# Code Coverage
CODECOV_TOKEN=your_codecov_token_here
# Atlas Personal Knowledge System Configuration Template
# Copy this file to .env and add your actual API keys

# === CORE ATLAS CONFIGURATION ===
DATABASE_URL=sqlite:///atlas.db
DATABASE_BACKUP_ENABLED=true
DATABASE_BACKUP_INTERVAL=24h
API_HOST=localhost
API_PORT=7444
API_DEBUG=false

# === REQUIRED: AI PROCESSING ===
DEFAULT_LLM_PROVIDER=openrouter
DEFAULT_MODEL=google/gemini-2.5-flash-lite
OPENROUTER_API_BASE_URL=https://openrouter.ai/api/v1

# CRITICAL: Add your OpenRouter API key here (starts with sk-or-v1-)
OPENROUTER_API_KEY=your_openrouter_api_key_here

# === OPTIONAL: YOUTUBE INTEGRATION ===
YOUTUBE_API_KEY=your_youtube_api_key_here
YOUTUBE_ENABLED=false
YOUTUBE_PROCESSING_INTERVAL=300
YOUTUBE_USE_MAC_MINI_FALLBACK=false
YOUTUBE_REQUIRE_CAPTIONS=false

# === OPTIONAL: PODEMOS RSS HOSTING ===
PODEMOS_ENABLED=false
PODEMOS_PROCESSING_TIME="02:00"
PODEMOS_RSS_HOST=your_domain.com
PODEMOS_AUTH_TOKEN=your_secure_token
OCI_BUCKET_NAME=your_bucket_name
OCI_REGION=your_region
OCI_ACCESS_KEY=your_access_key
OCI_SECRET_KEY=your_secret_key

# === OPTIONAL: MAC MINI INTEGRATION ===
MAC_MINI_ENABLED=false
MAC_MINI_SSH_HOST=macmini
MAC_MINI_QUEUE_DIR=~/atlas_worker/queue
MAC_MINI_WHISPER_MODEL=base
MAC_MINI_TIMEOUT=300
MAC_MINI_MAX_CONCURRENT_TASKS=3

# === OPTIONAL: EMAIL INTEGRATION ===
EMAIL_ENABLED=false
EMAIL_IMAP_HOST=imap.gmail.com
EMAIL_IMAP_PORT=993
EMAIL_USERNAME=your-email@gmail.com
EMAIL_PASSWORD=your-app-password
EMAIL_FOLDER=Atlas

# === OPTIONAL: GMAIL API INTEGRATION ===
GMAIL_ENABLED=false
GMAIL_CREDENTIALS_PATH=config/gmail_credentials.json
GMAIL_TOKEN_PATH=data/gmail_token.json
GMAIL_WATCH_LABELS=["Atlas", "Newsletter"]
GCP_PROJECT_ID=your-gcp-project-id
PUBSUB_TOPIC=gmail-notifications
PUBSUB_SUBSCRIPTION=gmail-push-subscription
GMAIL_WEBHOOK_SECRET=your-webhook-secret-key

# === PERFORMANCE TUNING ===
MAX_CONCURRENT_ARTICLES=5
MAX_CONCURRENT_PODCASTS=2
MAX_CONCURRENT_YOUTUBE=2
ARTICLE_TIMEOUT=300
PODCAST_DOWNLOAD_TIMEOUT=600
PROCESSING_TIMEOUT=600

# === BACKUP CONFIGURATION ===
BACKUP_ENABLED=true
BACKUP_SCHEDULE=daily
BACKUP_RETENTION_DAYS=30
BACKUP_REMOTE_ENABLED=false
BACKUP_REMOTE_HOST=backup-server.com
BACKUP_REMOTE_USER=atlas-backup

# Archive strategy order (for article processing)
ARCHIVE_STRATEGIES=direct,paywall_auth,enhanced_wayback,12ft,archive_today,googlebot,playwright,standard_wayback

{
  "manifest_version": 2,
  "name": "Atlas Content Capture",
  "version": "1.0",
  "description": "Capture web content directly to your Atlas system",
  "permissions": [
    "activeTab",
    "contextMenus",
    "storage",
    "http://localhost:8000/*",
    "https://*/"
  ],
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "scripts": ["background_firefox.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
# Atlas Sample Configuration
# Copy this file to .env and update with your actual values

# OpenRouter API Key (required for AI features)
OPENROUTER_API_KEY=your_openrouter_api_key_here

# Alternative: OpenAI API Key
OPENAI_API_KEY=your_openai_api_key_here

# YouTube API Key (for YouTube content ingestion)
YOUTUBE_API_KEY=your_youtube_api_key_here

# Instapaper Credentials (for Instapaper import)
INSTAPAPER_LOGIN=your_instapaper_email@example.com
INSTAPAPER_PASSWORD=your_instapaper_password

# Data Directory (where processed content is stored)
DATA_DIRECTORY=./output

# Log Directory
LOG_DIR=./logs

# Cache Directory
CACHE_DIR=./.cache

# Optional Features
TRANSCRIBE_ENABLED=false
WHISPER_MODEL=base

# Model Configuration
MODEL=google/gemini-2.0-flash-lite-001
MODEL_PREMIUM=google/gemini-2.0-flash-lite-001
MODEL_BUDGET=mistralai/mistral-7b-instruct
MODEL_FALLBACK=google/gemini-2.0-flash-lite-001

# Processing Limits
ARTICLE_PROCESSING_LIMIT=100
PODCAST_EPISODE_LIMIT=10
YOUTUBE_VIDEO_LIMIT=5

# Network Configuration
API_HOST=localhost
API_PORT=8000

# Security Settings
REQUIRE_AUTHENTICATION=false
ENCRYPTION_ENABLED=false

# Advanced Settings (leave as default unless you know what you're doing)
USE_12FT_IO_FALLBACK=false
USE_PLAYWRIGHT_FOR_NYT=false
SKYVERN_ENABLED=false
[Unit]
Description=Atlas Continuous Transcript Processor
After=network.target

[Service]
Type=simple
User=ubuntu
WorkingDirectory=/home/ubuntu/dev/atlas
ExecStart=/usr/bin/python3 /home/ubuntu/dev/atlas/continuous_runner.py
Restart=always
RestartSec=60
StandardOutput=journal
StandardError=journal

# Environment variables
Environment=PYTHONUNBUFFERED=1
EnvironmentFile=/home/ubuntu/dev/atlas/.env

[Install]
WantedBy=multi-user.target
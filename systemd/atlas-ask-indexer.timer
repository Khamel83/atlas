[Unit]
Description=Atlas Ask Content Indexer Timer
# NOTE: This timer is DISABLED by default
# Enable with: sudo systemctl enable --now atlas-ask-indexer.timer

[Timer]
# Run every 6 hours, offset from podcast discovery
OnCalendar=*-*-* 03,09,15,21:00:00
RandomizedDelaySec=300
Persistent=true

[Install]
WantedBy=timers.target
